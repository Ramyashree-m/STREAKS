class Solution:
    def divide(self, a: int, b: int) -> int:
        if a == -2**31 and b == -1: return 2**31 - 1
        s, a, b, r = (a > 0) == (b > 0), abs(a), abs(b), 0
        while a >= b:
            c, d = 1, b
            while a >= d << 1:
                d <<= 1
                c <<= 1
            a -= d
            r += c
        return r if s else -r

